<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
    http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <modelVersion>4.0.0</modelVersion>

  <groupId>com.datastax.cassandra</groupId>
  <artifactId>com.datastax.driver.examples.rcp</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>DataStax Java Driver for Apache Cassandra Examples - Eclipse RCP</name>
  <packaging>pom</packaging>

  <properties>
    <driver.version>2.1.5</driver.version>
    <guava.version>18.0</guava.version>
    <tycho.version>0.22.0</tycho.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <luna-repo.url>http://download.eclipse.org/releases/luna/201502271000</luna-repo.url>
    <orbit-repo.url>http://download.eclipse.org/tools/orbit/downloads/drops/R20150124073747/repository</orbit-repo.url>
  </properties>

  <repositories>

    <repository>
      <id>luna</id>
      <url>${luna-repo.url}</url>
      <layout>p2</layout>
    </repository>

    <repository>
      <id>orbit</id>
      <url>${orbit-repo.url}</url>
      <layout>p2</layout>
    </repository>

  </repositories>

  <modules>
    <module>../com.datastax.driver.examples.rcp.repository</module>
    <module>../com.datastax.driver.examples.rcp.mailbox</module>
    <module>../com.datastax.driver.examples.rcp.mailbox.tests</module>
  </modules>

  <dependencies>

    <dependency>
      <groupId>com.datastax.cassandra</groupId>
      <artifactId>cassandra-driver-core</artifactId>
      <version>${driver.version}</version>
    </dependency>

    <!--
    Example of overriding Guava's version.
    Tycho will pick this version when building
    the P2 repository in com.datastax.driver.examples.rcp.repository.
    -->
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${guava.version}</version>
    </dependency>

  </dependencies>

  <build>

    <plugins>

      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho.version}</version>
        <extensions>true</extensions>
      </plugin>

      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-compiler-plugin</artifactId>
        <version>${tycho.version}</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-surefire-plugin</artifactId>
        <version>${tycho.version}</version>
        <configuration>
          <useUIHarness>false</useUIHarness>
          <useUIThread>false</useUIThread>
          <systemProperties>
            <logback.configurationFile>file://${basedir}/src/main/resources/logback.xml</logback.configurationFile>
          </systemProperties>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho.version}</version>
        <configuration>
          <pomDependencies>consider</pomDependencies>
          <targetDefinitionIncludeSource>honor</targetDefinitionIncludeSource>
          <!-- 
          SLF4J to Logback bridge is a fragment and needs to be explicitly put in the target platform 
          see http://stackoverflow.com/questions/22017174/using-slf4j-from-the-eclipse-orbit-in-tests-with-tycho-surefire
          -->
          <dependency-resolution>
            <extraRequirements>
              <requirement>
                <type>eclipse-plugin</type>
                <id>ch.qos.logback.slf4j</id>
                <versionRange>1.0.7</versionRange>
              </requirement>
            </extraRequirements>
          </dependency-resolution>
          <environments>
            <environment>
              <os>linux</os>
              <ws>gtk</ws>
              <arch>x86_64</arch>
            </environment>
            <environment>
              <os>win32</os>
              <ws>win32</ws>
              <arch>x86_64</arch>
            </environment>
            <environment>
              <os>macosx</os>
              <ws>cocoa</ws>
              <arch>x86_64</arch>
            </environment>
          </environments>
        </configuration>
      </plugin>

    </plugins>

  </build>

</project>